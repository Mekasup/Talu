}

</table>
<script type="text/javascript">
    function updateRecherche(select)
    {
        $("#buttonRechercheAuteur").attr('href', '/Groupes/Details/' + select.value);
        $("#buttonRechercheAlbum").attr('href', '/Albums/Details/' + select.value);
    }
</script>
