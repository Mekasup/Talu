@model IEnumerable<Talu.Models.Album>

@{
    ViewBag.Title = "Index";
}

<h2>Listes des albums</h2>
<table class="table">
    <tr>
        <th class="col-lg-2">
            @Html.DisplayNameFor(model => model.ImagePochette)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateDeSortie)
        </th>
        <th>
            <!--@Html.DisplayNameFor(model => model.Groupe.Nom)-->
            Groupe
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <!--@Html.DisplayFor(model => item.ImagePochette)-->
            @{
                var source = item.ImagePochette;
                <img src="@source" style="width : 40%;" />
            }
        </td>
        <td>
            <!--@Html.DisplayFor(modelItem => item.Nom)-->
            @Html.ActionLink(item.Nom, "Details", new { id = item.Id })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateDeSortie).ToString().Remove(10)
        </td>
        <td>
            <!--@Html.DisplayFor(modelItem => item.Groupe.Nom)-->
            @Html.ActionLink(item.Groupe.Nom,"Details/"+item.IdGroupe, new { controller = "Groupes" })
        </td>
    </tr>
}

</table>
