@model IEnumerable<Talu.Models.Musique>

@{
    ViewBag.Title = "Details";
}

<div>
    <h2>@Model.First().Album.Nom</h2>
    <hr />
    <dl class="dl-horizontal">

        <dt>
        </dt>

        <dd>
            <!--@Html.DisplayFor(model => model.First().Album.ImagePochette)-->
            @{
                var source = Model.First().Album.ImagePochette;
                <div>
                    <img src="@source" style="width: 40%;"/>
                </div>            
                }
        </dd>

        <dt>
            <!--@Html.DisplayNameFor(model => model.Nom)-->
            Nom
        </dt>

        <dd>
            @Html.DisplayFor(model => model.First().Album.Nom)
        </dd>

        <dt>
            Date de Sortie
        </dt>

        <dd>
            @Html.DisplayFor(model => model.First().Album.DateDeSortie).ToString().Remove(10)
        </dd>

        <dt>
            Nom du groupe
        </dt>

        <dd>
           @Html.ActionLink(Model.First().Album.Groupe.Nom, "Details/" + Model.First().Album.Groupe.Id, new { controller = "Groupes" })
        </dd>

    </dl>
</div>

<h2>Liste des musiques</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Style)
        </th>
        <th>
            <!--@Html.DisplayNameFor(model => model.Album.Nom)-->
            Nom de l'album
        </th>
        <th>
            Nom du groupe
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <!--@Html.DisplayFor(modelItem => item.Nom)-->
                @Html.ActionLink(item.Nom, "Details/" + item.Id, new { controller = "Musiques" })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Style)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Album.Nom)
            </td>
            <td>
                @Html.ActionLink(item.Album.Groupe.Nom, "Details/" + item.Album.IdGroupe, new { controller = "Groupes" })
            </td>
            <!--<td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>-->
        </tr>
    }
</table>

<a href="~/Albums/Index" class="btn btn-primary">
    Retour à la liste complète
</a>

